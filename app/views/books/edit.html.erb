<h1>Editing Book</h1>
<% if @book.errors.any? %>

 <div id class="error_explanation">
  <h2><%= @book.errors.count %>error</h2>
  <ul style="color:red">
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %> 
  </ul>
 </div>
 
<% end %>

<%= form_with model: @book,url:book_path(@book.id),method: :patch do |f| %>

 <div class="field">
  <h5>Title</h5>
  <%= f.text_field :title %>
 </div>
 
 <div class="field">
  <h5>Body</h5>
  <%= f.text_area :body %>
 </div>
 
 <div class="actions">
  <%= f.submit 'Update Book' %>
 </div>
 
<% end %>

<%= link_to "Show",book_path(@book.id) %>
|
<%= link_to "Back", "/books" %>

