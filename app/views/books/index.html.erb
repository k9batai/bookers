<h1>Books</h1>
<table>
  <thead>
    <tr>
    <th><strong>Title</strong></th>
    <th><strong>Body</strong></th>
    <th colspan='3'></th>
    </tr>
  </thead>
  <tbody>

  <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.body %></span></td>
      <td><%= link_to "Show",book_path(book) %></td>
      <td><%= link_to "Edit",edit_book_path(book) %></td>
      <td><%= link_to "Dstroy",book_path(book),method: :delete,"data-confirm" => "Are you sure?" %></td>
    </tr>
      <% end %>
  </tbody>
</table>

<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="field">
 <h5>Title</h5>
 <%= f.text_field :title,:class=> "book_title" %>
 </div>
 
 <div class="field">
  <h5>Body</h5>
  <%= f.text_area :body,:class=> "book_body" %>
 </div>  
  
 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>  
<% end %>
